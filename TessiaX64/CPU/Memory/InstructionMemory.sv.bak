module InstructionMemory #(parameter WIDTH = 8)
(
    input logic [WIDTH-1:0] a,
	output logic [WIDTH-1:0] rd
);

  // Define the ROM array with initial values
  logic [WIDTH-1:0] ROM [63:0];

	 // Initialize ROM with values
	initial begin
		ROM[0] = 64'b1110000001000111100000000000000000000000000000000000000000001111;
		ROM[1] = 64'b1110001010000000000000000000000000000000000000000000000000000010;
		ROM[2] = 64'b1110001110100000001010000000000000000000000000000000000000010100;
		ROM[3] = 64'b1110000001000111100001000000000000000000000000000000000000001111;
		ROM[4] = 64'b1110000101000101000000000000000000000000000000000000000000000001;
		for (int i = 5; i < 64; i++) begin
		  ROM[i] = 64'b0;
		end
	end
	// Assign the output based on the input address
	assign rd = ROM[a[63:2]]; // word aligned
endmodule